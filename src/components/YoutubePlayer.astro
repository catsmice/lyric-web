    { time: 3, original: "Lyric at 0:03", translation: "Translation at 0:03", hiragana: "Hiragana at 0:03" },
    { time: 6, original: "Lyric at 0:06", translation: "Translation at 0:06", hiragana: "Hiragana at 0:06" },
